<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.ctoolkit.turnonline</groupId>
        <artifactId>turnonline-parent</artifactId>
        <version>4</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.ctoolkit.turnonline.archetype</groupId>
    <artifactId>turnonline-archetype</artifactId>
    <version>0.5-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>TurnOnline.biz Archetype Parent</name>
    <description>TurnOnline.biz Ecosystem Archetype Parent</description>
    <url>https://www.turnonline.biz</url>

    <scm>
        <connection>scm:git:[fetch=]git@github.com:turnonline/turnonline-archetype.git</connection>
        <developerConnection>scm:git:[push=]git@github.com:turnonline/turnonline-archetype.git</developerConnection>
        <url>https://github.com/turnonline/turnonline-archetype</url>
        <tag>HEAD</tag>
    </scm>

    <issueManagement>
        <url>https://github.com/turnonline/turnonline-archetype/issues</url>
    </issueManagement>

    <developers>
        <developer>
            <name>Aurel Medvegy</name>
            <id>medvegy</id>
            <email>aurel.medvegy@ctoolkit.org</email>
        </developer>
    </developers>

    <modules>
        <module>microservice</module>
        <module>archetype-prepare</module>
        <module>archetype</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-archetype-plugin</artifactId>
                <version>2.4</version>
                <inherited>false</inherited>
                <executions>
                    <execution>
                        <configuration>
                            <propertyFile>archetype-prepare/archetype.properties</propertyFile>
                        </configuration>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>create-from-project</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <maven.deploy.skip>true</maven.deploy.skip>
    </properties>
</project>
