<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    <service>default</service>
    <runtime>java8</runtime>

    <!--
        https://stackoverflow.com/questions/40708265/gae-whats-the-difference-between-min-pending-latency-and-max-pending-latenc
        App Engine can choose to create an instance at any time between min-pending-latency and max-pending-latency
    -->
    <automatic-scaling>
        <max-idle-instances>automatic</max-idle-instances>
        <min-pending-latency>automatic</min-pending-latency>
        <max-pending-latency>automatic</max-pending-latency>
    </automatic-scaling>
    <instance-class>F2</instance-class>

    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/classes/logging.properties"/>
        <property name="profile" value="${deployment.profile}"/>
    </system-properties>

    <sessions-enabled>true</sessions-enabled>
    <threadsafe>true</threadsafe>

    <static-files>
        <include expiration="365d" path="/my.account.widget/**.*"/>
        <include expiration="0s" path="/my.account.widget/my.account.widget.nocache.js"/>

        <include expiration="365d" path="/contact.widget/**.*"/>
        <include expiration="0s" path="/contact.widget/contact.widget.nocache.js"/>

        <include expiration="365d" path="/bill.widget/**.*"/>
        <include expiration="0s" path="/bill.widget/bill.widget.nocache.js"/>

        <include expiration="365d" path="/billing.widget/**.*"/>
        <include expiration="0s" path="/billing.widget/billing.widget.nocache.js"/>

        <include expiration="365d" path="/product.widget/**.*"/>
        <include expiration="0s" path="/product.widget/product.widget.nocache.js"/>

        <include expiration="365d" path="/purchase.widget/**.*"/>
        <include expiration="0s" path="/purchase.widget/purchase.widget.nocache.js"/>

        <include expiration="365d" path="/search.widget/**.*"/>
        <include expiration="0s" path="/search.widget/search.widget.nocache.js"/>

        <include expiration="30d" path="/scripts/*.js"/>
        <include expiration="30d" path="/images/*.png"/>
        <include expiration="30d" path="/images/*.gif"/>
        <include expiration="30d" path="/styles/*.css"/>
        <include expiration="30d" path="/*.js"/>
        <include expiration="30d" path="/*.css"/>
        <include expiration="30d" path="/*.png"/>
        <include expiration="30d" path="/favicon.ico"/>
        <include expiration="30d" path="/styles/fonts/icomoon.ttf"/>
        <include expiration="30d" path="/splash/splash.*"/>
        <include expiration="30d" path="/splash/font/**.*"/>
        <include expiration="30d" path="/launcher-icons/*.png"/>
    </static-files>

</appengine-web-app>
