<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.ctoolkit.turnonline</groupId>
        <artifactId>turnonline-parent</artifactId>
        <version>4</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.ctoolkit.turnonline.archetype</groupId>
    <artifactId>turnonline-archetype</artifactId>
    <version>0.5-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Project Parent</name>
    <description>TurnOnline.biz Microservices Platform Archetype</description>
    <url>https://www.turnonline.biz</url>

    <modules>
        <module>library</module>
        <module>microservices</module>
        <module>deployment</module>
    </modules>

    <scm>
        <connection>scm:git:[fetch=]git@github.com:turnonline/turnonline-archetype.git</connection>
        <developerConnection>scm:git:[push=]git@github.com:turnonline/turnonline-archetype.git</developerConnection>
        <url>https://github.com/turnonline/turnonline-archetype</url>
        <tag>HEAD</tag>
    </scm>

    <issueManagement>
        <url>https://github.com/turnonline/turnonline-archetype/issues</url>
    </issueManagement>

    <developers>
        <developer>
            <name>Aurel Medvegy</name>
            <id>medvegy</id>
            <email>aurel.medvegy@ctoolkit.org</email>
        </developer>
    </developers>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.google.appengine</groupId>
                    <artifactId>appengine-maven-plugin</artifactId>
                    <version>${gae.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-ear-plugin</artifactId>
                    <version>${maven-ear-plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>${maven-surefire-plugin.version}</version>
                    <configuration>
                        <argLine>-Xmx256m ${jmockit.setting}</argLine>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>2.7</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-clean-plugin</artifactId>
                    <version>3.0.0</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-install-plugin</artifactId>
                    <version>2.5.2</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencyManagement>
        <dependencies>
            <!-- Bill Of Material -->
            <dependency>
                <groupId>org.ctoolkit.maven</groupId>
                <artifactId>ctoolkit-project-bom</artifactId>
                <version>${ctoolkit-project-bom.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.ctoolkit.maven</groupId>
                <artifactId>ctoolkit-library-bom</artifactId>
                <version>${ctoolkit-library-bom.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.ctoolkit.maven</groupId>
                <artifactId>wicket-bom</artifactId>
                <version>${wicket-bom.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.ctoolkit.turnonline</groupId>
                <artifactId>turnonline-resources</artifactId>
                <version>${resources.version}</version>
            </dependency>
            <dependency>
                <groupId>org.ctoolkit.turnonline</groupId>
                <artifactId>turnonline-wicket</artifactId>
                <version>0.5-20160718.081037-4</version>
            </dependency>
            <!-- TODO Once will be released move to ctoolkit-project-bom -->
            <dependency>
                <groupId>org.ctoolkit.services</groupId>
                <artifactId>ctoolkit-services-identity</artifactId>
                <version>0.5-20160712.211214-3</version>
            </dependency>
            <dependency>
                <groupId>org.ctoolkit.services</groupId>
                <artifactId>ctoolkit-services-common</artifactId>
                <version>0.5-20160712.211155-1</version>
            </dependency>
            <dependency>
                <groupId>org.ctoolkit.turnonline</groupId>
                <artifactId>turnonline-client-appengine</artifactId>
                <version>${turnonline-client-appengine.version}</version>
            </dependency>
            <!-- Test scope dependencies -->
            <dependency>
                <groupId>org.jmockit</groupId>
                <artifactId>jmockit</artifactId>
                <version>${jmockit.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.testng</groupId>
                <artifactId>testng</artifactId>
                <version>${testng.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <gae.version>1.9.52</gae.version>
        <ctoolkit-project-bom.version>1.9.52</ctoolkit-project-bom.version>
        <ctoolkit-library-bom.version>4</ctoolkit-library-bom.version>
        <wicket-bom.version>6.19.0</wicket-bom.version>
        <maven-surefire-plugin.version>2.19.1</maven-surefire-plugin.version>
        <maven-ear-plugin.version>2.10.1</maven-ear-plugin.version>
        <!-- library versions -->
        <resources.version>0.6-20160712.214235-75</resources.version>
        <turnonline-client-appengine.version>0.5-20160615.224003-48</turnonline-client-appengine.version>
        <!--ctoolkit agent-->
        <ctoolkit-agent.version>0.1</ctoolkit-agent.version>
        <!--for testing-->
        <testng.version>6.9.10</testng.version>
        <ctoolkit-test.version>1.2</ctoolkit-test.version>
        <jmockit.version>1.24</jmockit.version>
        <!-- jmockit settings for OpenJDK otherwise throws 'IllegalStateException: To run on OpenJDK 64-Bit Server VM use -javaagent..' -->
        <jmockit.setting>
            -javaagent:${settings.localRepository}/org/jmockit/jmockit/${jmockit.version}/jmockit-${jmockit.version}.jar
        </jmockit.setting>
        <maven.deploy.skip>true</maven.deploy.skip>
    </properties>

    <profiles>
        <profile>
            <id>jdk8</id>
            <activation>
                <jdk>1.8</jdk>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>${maven-javadoc-plugin.version}</version>
                        <configuration>
                            <additionalparam>-Xdoclint:none</additionalparam>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <!-- the profile to create archetype from the project -->
            <id>archetype</id>
            <activation>
                <property>
                    <name>performRelease</name>
                    <value>true</value>
                </property>
            </activation>
            <modules>
                <module>archetype-prepare</module>
                <module>archetype</module>
            </modules>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-archetype-plugin</artifactId>
                        <version>2.4</version>
                        <inherited>false</inherited>
                        <executions>
                            <execution>
                                <configuration>
                                    <propertyFile>archetype-prepare/archetype.properties</propertyFile>
                                </configuration>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>create-from-project</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
